<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5" >

    <include layout="@layout/top_view" />

    <EditText
        android:id="@+id/d13_complain_edittext"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/feed_item_bg"
        android:gravity="top|left"
        android:hint="@string/complain_text"
        android:padding="10dp"
        android:textColor="#333333"
        android:textSize="16dp" />

    <Button
        android:id="@+id/d13_complain_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/c1_apply_btn_select"
        android:gravity="center"
        android:text="@string/complain"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>