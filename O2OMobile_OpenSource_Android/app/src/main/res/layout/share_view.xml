<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#c439BCED"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/share_sina"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/weibo_share" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/weixin_share" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sms_share" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/copy_share" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/share_cancel"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_button_cancel_share"
            android:gravity="center"
            android:text="@string/cancel_share"
            android:textColor="@color/select_item"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>