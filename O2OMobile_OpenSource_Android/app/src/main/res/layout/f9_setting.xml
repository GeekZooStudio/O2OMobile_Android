<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F7F7F7"
              android:orientation="vertical">

    <include layout="@layout/top_view"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="never">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/change_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/nickname"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <RelativeLayout
                    android:id="@+id/change_avartar"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/my_avatar"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <RelativeLayout
                    android:id="@+id/change_sinagture"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/personal_signature"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <RelativeLayout
                    android:id="@+id/change_brief"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/personal_brief"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/my_sevice"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                >
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="#DEDEDE"/>
                <TextView
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/my_service"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <RelativeLayout
                    android:id="@+id/change_password"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/change_login_password"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <RelativeLayout
                    android:id="@+id/feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/feedback"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <RelativeLayout
                    android:id="@+id/about"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/img_select"
                    android:paddingLeft="20dp"
                    android:textSize="18dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/about_us"
                        android:textColor="#444444"
                        android:textSize="18dp"/>

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/c0_arrow_on"/>
            </RelativeLayout>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="#DEDEDE"/>

            <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_button_logout"
                    android:text="@string/account_logout"
                    android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>