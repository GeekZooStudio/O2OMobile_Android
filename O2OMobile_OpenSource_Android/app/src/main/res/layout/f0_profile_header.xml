<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/profile_bg" >

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/img_select"
            android:padding="13dp"
            android:src="@drawable/a2_btn_back" />

        <ImageView
            android:id="@+id/top_view_setting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:background="@drawable/img_select"
            android:padding="13dp"
            android:src="@drawable/c1_setting_icon"
            android:visibility="visible" />
        <TextView
                android:id="@+id/complain"
                android:textSize="16dp"
                android:padding="10dp"
                android:text="@string/complain"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="120dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:maxEms="7"
            android:textSize="22dp" />
            <ImageView
                    android:id="@+id/refresh"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/b5_redo_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-42.5dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/fl_login"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/c0_avarta_bg" >

            <com.BeeFramework.view.RoundedWebImageView
                android:id="@+id/iv_avarta"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/e8_profile_no_avatar" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="#6A6A6A"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/select_item"
                android:textSize="16dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_brief"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E2E2E2" />

        <TextView
            android:id="@+id/tv_brief"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="#6A6A6A"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/brief_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/look_up_all"
            android:textColor="@color/select_item" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#E2E2E2" />

    <LinearLayout
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.insthub.O2OMobile.View.MyGridView
            android:id="@+id/grid_view_service_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:padding="10dp"
        >
        </com.insthub.O2OMobile.View.MyGridView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E2E2E2" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/img_select" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/select_item"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/client_evaluate"
                android:textColor="#6A6A6A"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_comment_goodrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/select_item"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/good_reputation_proportion"
                android:textColor="#6A6A6A"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/c0_arrow_on" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E2E2E2" />


</LinearLayout>